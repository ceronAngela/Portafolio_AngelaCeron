---
const personalImageAlt = "Angela Ceron"
import Badge from "./Badge.astro"
import LinkedInIcon from "./icons/LinkedIn.astro"
import MailIcon from "./icons/Mail.astro"
import SocialPill from "./SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/angelaCeron.jpeg"
      alt={personalImageAlt}
    />
    <a
      href="#agregar link linkedin"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hola, soy Angela Cerón
  </h1>
  <p
    class="mt-6 text-xl text-gray-300 dark:[&>strong]:text-green-200 [&>strong]:text-green-500 [&>strong]:font-semibold dark:text-gray-200"> 
    <strong> Ingeniera de Sistemas - Universidad de Nariño</strong> <br>
    con sólida formación en desarrollo web, con más de 2 años de expeciencia en  .net y SQLserver
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:karynaceron@udenar.edu.co">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="#poner enlace linkedink">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
