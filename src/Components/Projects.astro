---
import GitHub from "./icons/GitHub.astro"
import Flask from "./icons/Flask.astro"
import Python from "./icons/Python.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import CodeIgniter from "./icons/CodeIgniter.astro"
import Laravel from "./icons/Laravel.astro"
import Php from "./icons/php.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  FLASK: {
    name: "Flask",
    class: "bg-black text-white",
    icon: Flask,
  },
  PYTHON: {
    name: "Python",
    class: "bg-black text-white",
    icon: Python,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-black text-white",
    icon: Bootstrap,
  },
  LARAVEL: {
    name: "Laravel",
    class: "bg-black text-white",
    icon: Laravel,
  },
  PHP: {
    name: "PHP",
    class: "bg-black text-white",
    icon: Php,
  },
  CodeIgniter: {
    name: "CodeIgniter",
    class: "bg-black text-white",
    icon: CodeIgniter,
  },
}
const PROJECTS = [
  {
    title: "SystemAgrop - Sistema de gestión de ventas y servicios.",
    description:
      "Sistema para la gestión de compras de implementos agropecuarios, que también permite agendar citas veterinarias y servicios de peluquería canina. Creado desde cero utilizando Flask, Jinja2, Python, Bootstrap, HTML, CSS y MySQL",
    github: "https://github.com/ceronAngela/SystemAgrop.git",
    image: "/projects/seteagroup2.png",
    tags: [TAGS.FLASK, TAGS.PYTHON, TAGS.BOOTSTRAP],
  },
  {
    title: "Bonita Peluquería - Sistema Integral para la gestión de una peluquería",
    description:
      "Bonita Peluquería es un sistema integral diseñado para optimizar la gestión de citas y la administración de una peluquería. Este sistema permite a los clientes agendar citas y visualizar servicios, y a los administradores manejar tanto las citas como la contabilidad del negocio. Proyecto creado desde cero utilizando Laravel, vite, php, Bootstrap, HTML, CSS y MySQL",
    github: "https://github.com/ceronAngela/BonitaPeluqueria.git",
    image: "/projects/bonitapeluqueria.png",
    tags: [TAGS.LARAVEL, TAGS.PHP, TAGS.BOOTSTRAP],
  },
  {
    title: "SOFTABRAHAM - Sistema para la gestión educativa",
    description:
      "Sistema de gestión educativa está diseñado para optimizar la administración de estudiantes, profesores y cursos dentro de una institución. Ofrece herramientas para registrar calificaciones, establecer porcentajes de evaluación, y generar informes detallados, como boletines de calificaciones. Proyecto creado desde cero utilizando CodeIgniter, php, Bootstrap, HTML, CSS y MySQL",
    github: "https://github.com/ceronAngela/SoftAbraham.git",
    image: "/projects/softAbraham.png",
    tags: [TAGS.CodeIgniter, TAGS.PHP, TAGS.BOOTSTRAP],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="error al cargar" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-[#20efaa] text-center">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2 ">
      <ul class="flex flex-row mb-2 gap-x-2 text-center">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-200 text-justify">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {/* {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )} */}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



